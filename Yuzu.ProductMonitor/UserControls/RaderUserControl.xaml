<UserControl
    x:Class="Yuzu.ProductMonitor.UserControls.RaderUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yuzu.ProductMonitor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="layGrid">
        <!--  画布  -->
        <Canvas x:Name="masterCanvas" />

        <!--  规则多边形  -->
        <Polygon
            x:Name="polygon1"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="polygon2"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="polygon3"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="polygon4"
            Stroke="#22ffffff"
            StrokeThickness="1" />

        <!--  数据多边形  -->
        <Polygon
            x:Name="polygon5"
            Fill="#550091F0"
            Stroke="Orange"
            StrokeThickness="1" />
    </Grid>
</UserControl>
